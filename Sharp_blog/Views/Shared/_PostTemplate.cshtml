@model Sharp_blog.Core.Objects.Post

<div class="post">
    <div class="post-meta">
        <div class="row">
 
            <!--Heading-->
            <div class="post-title">
                <h2>@Html.PostLink(Model)</h2>
            </div>
 
        </div>
 
        <div class="row">
 
            <!--Category-->
            <div class="post-category">
                <span>Category: </span>@Html.CategoryLink(Model.Category)
            </div>
 
            <!--Tags-->
            <div class="post-tags">
                <span>Tags:</span>@Helpers.Tags(Html, Model.Tags)
            </div>
 
            <!--Posted date-->
            <div class="posted-date">
                @Model.PublishDate.ToLocalTime(); <!--ToConfigLocalTime()-->
            </div>
 
        </div>
 
    </div>
 
    <!--Short Description-->
    <div class="post-body">
        @Html.Raw((string) Model.ShortDescription)
    </div>
 
    <div class="post-foot">
        @* todo: code duplicate - @Html.PostLink(Model) *@
        @Html.ActionLink("continue...", "GetPosts", "Blog",
            new
            {
                year = Model.PublishDate.Year,
                month = Model.PublishDate.Month,
                day = Model.PublishDate.Day,
                title = Model.UrlSlug
            },
            new {title = "continue..."}
            )
    </div>
</div>